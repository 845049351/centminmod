server:
	hide-version: yes

	# zonefile: to store pid for nsd in.
	pidfile: "/var/run/nsd/nsd.pid"

	# The directory for zonefile: files.
	zonesdir: "/etc/nsd"

zone:
	name: "demo.com"
	zonefile: "master/demo.com.zone"